<odoo>
  <data>
    <record id="res_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
        <xpath expr="//field[@name='vat']" position="before">
            <field name="foreign"/>
        </xpath>
        <xpath expr="//field[@name='vat']" position="after">
            <field name="curp"/>
            <field name="id_no"/>
            <field name="ocupation"/>
        </xpath>
        <notebook>
            <page name="validacion" string="Validación">
                <group>
                    <group string='Validaciones'>
                        <label for="chk_gob"/>
                          <div class="o_row" name="chk_gob">
                              <field name="chk_gob"/>
                            <span>¿Esta persona es del Gobierno?</span>
                          </div>

                        <label for="chk_fid"/>
                          <div class="o_row" name="chk_fid">
                              <field name="chk_fid"/>
                            <span>¿Esta persona es un fideicomiso?</span>
                          </div>
                    </group>
                    <group string="Validación de documentos">
                        <!--Validación de documentos-->
                        <label for="chk_vat"/>
                          <div class="o_row" name="chk_vat">
                              <field name="name_vat" invisible="1"/>
                              <field name="chk_vat"/>
                            <span><field name="doc_vat" filename="name_vat"/></span>
                          </div>
                        <label for="chk_cur"/>
                          <div class="o_row" name="chk_cur">
                            <field name="name_cur" invisible="1"/>
                            <field name="chk_cur"/>
                            <span><field name="doc_cur" filename="name_cur"/></span>
                          </div>
                        <label for="chk_ids"/>
                          <div class="o_row" name="chk_ids">
                            <field name="name_ids" invisible="1"/>
                            <field name="chk_ids"/>
                            <span><field name="doc_ids" filename="name_ids"/></span>
                          </div>
                        <label for="chk_act"/>
                          <div class="o_row" name="chk_act">
                            <field name="name_act" invisible="1"/>
                            <field name="chk_act"/>
                            <span><field name="doc_act" filename="name_act"/></span>
                          </div>
                        <label for="chk_avi"/>
                          <div class="o_row" name="chk_avi">
                            <field name="name_avi" invisible="1"/>
                            <field name="chk_avi"/>
                            <span><field name="doc_avi" filename="name_avi"/></span>
                          </div>
                        <label for="chk_est"/>
                          <div class="o_row" name="chk_est">
                            <field name="name_est" invisible="1"/>
                            <field name="chk_est"/>
                            <span><field name="doc_est" filename="name_est"/></span>
                          </div>
                        <label for="chk_org"/>
                          <div class="o_row" name="chk_org">
                            <field name="name_org" invisible="1"/>
                            <field name="chk_org"/>
                            <span><field name="doc_org" filename="name_org"/></span>
                          </div>
                        <label for="chk_dec"/>
                          <div class="o_row" name="chk_dec">
                            <field name="name_dec" invisible="1"/>
                            <field name="chk_dec"/>
                            <span><field name="doc_org" filename="name_dec"/></span>
                          </div>
                    </group>
                </group>
            </page>
        </notebook>
        </field>
    </record>
  </data>
</odoo>